<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - @Html.Raw(Resources.Resource.Layout_SalesReports)</title>
    <link rel="apple-touch-icon" sizes="180x180" href="@Url.Content("~/Content/favicon/apple-touch-icon180.png")">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/favicon/logo32.png")" sizes="32x32">
    <link rel="icon" type="image/png" href="@Url.Content("~/Content/favicon/logo16.png")" sizes="16x16">
    <link rel="manifest" href="@Url.Content("~/Content/favicon/manifest.json")">
    <link rel="mask-icon" href="@Url.Content("~/Content/favicon/safari-pinned-tab.svg")" color="#697683">
    
    @Html.C1().Styles()
    @Styles.Render("~/Content/css/site")
    @Scripts.Render("~/bundles/modernizr")
    @Html.C1().Scripts().FlexViewer()
</head>
<body>

    <div class="hide">
        @Html.Partial("_SiteNav", true)
    </div>
    <header>
        <div class="hamburger-nav-btn narrow-screen"><span class="icon-bars-w"></span></div>
        @if (ViewBag.Email != null)
        {
        <div class="wide-screen user-panel">
            <span class="glyphicon glyphicon-user"></span> <span>@ViewBag.Email (@ViewBag.Role)</span><br />
            <a class="signout-btn" href="javascript:void(0)" onclick="logout()">
                @Html.Raw(Resources.Resource.SiteNav_SignOut)
            </a>
        </div>
        }
        <div class="menu-container">
            <div class="menu-left">
                <a href="https://developer.mescius.com/webapi" target="_blank">
                    <img src="~/Content/css/images/logotext_w.png" class="gcicon-logo-gc-horiz" alt="mescius" />
                </a>
            </div>
            <div class="menu-divide"></div>
            <div class="menu-main">
                <span class="semi-bold">@ViewBag.Title - @Html.Raw("ComponentOne " + Resources.Resource.Layout_SalesReports)</span>
            </div>
            <div class="menu-right">
                @Html.Partial("_SiteNav", false)
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <a href="http://developer.mescius.com/">
            <img src="~/Content/css/images/logotext.png" class="gcicon-logo-gc-horiz" alt="mescius" />
        </a>
        <p>
            © @DateTime.Now.Year @Html.Raw(Resources.Resource.Layout_License1)<br />
            @Html.Raw(Resources.Resource.Layout_License2)
        </p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @{ 
        var homeUrl = Url.Action("Index", "Home");
        var reportPageUrl = Url.Action("Report", "Home");
        var filesPageUrl = Url.Action("Files", "Home");
        var folder = Request.QueryString["folder"];
        if (string.IsNullOrEmpty(folder))
        {
            folder = "/";
        }

        var reportApi = UrlHelper.GenerateContentUrl("~/api/report", Context);
    }

    <script>
        var folder = '@folder',
        reportApi = '@reportApi',
        homeUrl = '@homeUrl',
        reportPageUrl = '@reportPageUrl',
        filesPageUrl = '@filesPageUrl';
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
