@model WebApiExplorer.Models.ControlsClass.Function

<div class="settings-panel-content">
    <div style="float:left;width:100%">
        <div style="float:left"><h4>@Html.Raw(Resources.Report.ReportPageSettingsGET_Parameters)</h4></div>
        <div style="float:right">
            <button style="margin-top:3px;padding: 4px;" class="btn btn-primary btn-report-pagesettings" disabled="disabled"
                    onclick="reportGetPageSettings('@Model.FunctionName', '@(System.Configuration.ConfigurationManager.AppSettings["WebAPIService"])');">
                @Html.Raw(Resources.Report.ReportPageSettingsGET_GetPageSettings)
            </button>
        </div>
    </div>
    <div>
        <div class="settings-panel report-pagesettings">
            <div class="param-item">
                <label class="param-lable parameter"><b>@Html.Raw(Resources.Report.ReportPageSettingsGET_Parameter)</b></label>
                <label class="param-lable value"><b>@Html.Raw(Resources.Report.ReportPageSettingsGET_Value)</b></label>
                <label class="param-lable description"><b>@Html.Raw(Resources.Report.ReportPageSettingsGET_Description)</b></label>
            </div>
            <div class="param-item">
                <label class="param-lable parameter">@Html.Raw(Resources.Report.ReportPageSettingsGET_FolderPath)</label>
                <span class="param-value-group">
                    <select name="folderPath" class="param-value" onchange="pageSettings_FolderPathChange($(this).val())" style="width: 100%; margin-bottom: 10px;">
                        <option value="none" selected="selected">@Html.Raw(Resources.Report.ReportPageSettingsGET_FolderPath_None)</option>
                        <option value="ReportsRoot/FlexCommonTasks/FlexCommonTasks.flxr">FlexCommonTasks.flxr</option>
                        <option value="c1ssrs/AdventureWorks">AdventureWorks (SSRS)</option>
                    </select>
                </span>
                <label class="param-lable description">@Html.Raw(Resources.Report.ReportPageSettingsGET_FolderPathText)</label>
            </div>
            <div class="param-item">
                <label class="param-lable parameter">@Html.Raw(Resources.Report.ReportPageSettingsGET_ReportName)</label>
                <span class="param-value-group">
                    <select name="reportName" class="param-value" style="width: 100%; margin-bottom: 10px;">
                    </select>
                </span>
                <label class="param-lable description">@Html.Raw(Resources.Report.ReportPageSettingsGET_ReportNameText)</label>
            </div>
        </div>
    </div>
</div>
<div id="@(Model.FunctionName)result" class="content-panel-result">
    <h4>@Html.Raw(Resources.Report.ReportPageSettingsGET_Headers)</h4>
    <div id="@(Model.FunctionName)headers" class="content-panel-result-url">
        <pre>
        </pre>
    </div>
    <h4 class="content-json-data">@Html.Raw(Resources.Report.ReportPageSettingsGET_ResponseData)</h4>
    <div id="@(Model.FunctionName)showdata" class="result-content-data" style="height:auto">
        <pre style="max-height:200px">
        </pre>
    </div>
</div>

<script>
    function reportGetPageSettings(id, url) {
        var folderPath = $(".report-pagesettings .param-value[name=folderPath]").val();
        var reportName = $(".report-pagesettings .param-value[name=reportName]").val();
        var fullUrl = url + "api/report/" + folderPath + "/" + reportName + "/$report/pagesettings";

        $("#@(Model.FunctionName)headers pre").text("@(Resources.Report.ReportPageSettingsGET_RequestURL)" + fullUrl);
        $("#@(Model.FunctionName)result").show();

        $.ajax({
            type: "GET",
            url: fullUrl,
            cache: false,
            success: function (data) {
                $("#@(Model.FunctionName)showdata pre").text(JSON.stringify(data, null, 4));
                $(".content-json-data").show();
            },
            complete: function (xhr, status) {
                $("#@(Model.FunctionName)headers pre").append("\r\n@(Resources.Report.ReportPageSettingsGET_StatusCode)" + xhr.status);
            }
        });
    }

    function pageSettings_FolderPathChange(folderPath) {
        var url = '@(System.Configuration.ConfigurationManager.AppSettings["WebAPIService"])';
        var select = $('.report-pagesettings .param-value[name=reportName]').empty();
        $("button.btn-report-pagesettings").attr("disabled", folderPath === "none");

        if (folderPath !== "none") {
            updateReportNames(folderPath, url, select);
        }
    }
</script>
