    @Html.Partial("_ImageExportOptions", optionsModel)
}

<script>
    function convertPalette(value) {
        return wijmo.chart.Palettes[value];
    }
</script>

@section Description{
    @Html.Raw(Resources.MVCFlexPie.Index_Text0)
}