@model WebApiExplorer.Models.ControlsClass.Function
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<div class="settings-panel-content">
    <div style="float:left;width:100%">
        <div style="float:left"><h4>@Html.Raw(Report.ReportInstanceDELETE_Parameters)</h4></div>
        <div style="float:right">
            <button style="margin-top:3px;padding: 4px;" class="btn btn-primary btn-report-instance" disabled="disabled"
                    onclick="reportInstanceClear('@Model.FunctionName', '@(Configuration["WebAPIService"])');">
                @Html.Raw(Report.ReportInstanceDELETE_Delete)
            </button>
        </div>
    </div>
    <div>
        <div class="settings-panel report-instance-clear">
            <div class="param-item">
                <label class="param-lable parameter"><b>@Html.Raw(Report.ReportInstanceDELETE_Parameter)</b></label>
                <label class="param-lable value"><b>@Html.Raw(Report.ReportInstanceDELETE_Value)</b></label>
                <label class="param-lable description"><b>@Html.Raw(Report.ReportInstanceDELETE_Description)</b></label>
            </div>
            <div class="param-item">
                <label class="param-lable parameter">@Html.Raw(Report.ReportInstanceDELETE_ReportFullPath)</label>
                <span class="param-value-group">
                    <input type="text" name="reportFullPath" class="param-value" style="width: 100%; margin-bottom: 10px;" disabled="disabled" value="@(Report.ReportInstanceDELETE_PleaseLoadAReportFirst)" />
                </span>
                <label class="param-lable description">@Html.Raw(Report.ReportInstanceDELETE_ReportFullPathText)</label>
            </div>
            <div class="param-item">
                <label class="param-lable parameter">@Html.Raw(Report.ReportInstanceDELETE_CacheId)</label>
                <span class="param-value-group">
                    <input type="text" name="instanceId" class="param-value" style="width: 100%; margin-bottom: 10px;" disabled="disabled" value="@(Report.ReportInstanceDELETE_PleaseLoadAReportFirst)" />
                </span>
                <label class="param-lable description">@Html.Raw(Report.ReportInstanceDELETE_CacheIdText)</label>
            </div>
        </div>
    </div>
</div>
<div id="@(Model.FunctionName)result" class="content-panel-result">
    <h4>@Html.Raw(Report.ReportInstanceDELETE_Headers)</h4>
    <div id="@(Model.FunctionName)headers" class="content-panel-result-url">
        <pre>
        </pre>
    </div>
    <h4 class="content-json-data">@Html.Raw(Report.ReportInstanceDELETE_ResponseData)</h4>
    <div id="@(Model.FunctionName)showdata" class="result-content-data" style="height:auto">
        <pre style="max-height:200px">
        </pre>
    </div>
</div>

<script>
    function reportInstanceClear(id, url) {
        var instanceId = $(".report-instance-clear .param-value[name=instanceId]").val();
        var reportFullPath = $(".report-instance-info .param-value[name=reportFullPath]").val();
        var fullUrl = url + "api/report/" + reportFullPath + "/$instances/" + instanceId;

        $("#@(Model.FunctionName)headers pre").text("@(Report.ReportInstanceDELETE_RequestURL)" + fullUrl);
        $("#@(Model.FunctionName)result").show();

        $.ajax({
            type: "DELETE",
            url: fullUrl,
            cache: false,
            success: function (data) {
                $("#@(Model.FunctionName)showdata pre").text(JSON.stringify(data, null, 4));
                $(".content-json-data").show();
            },
            complete: function (xhr, status) {
                $("#@(Model.FunctionName)headers pre").append("\r\n@(Report.ReportInstanceDELETE_StatusCode)" + xhr.status);
            }
        });
    }
</script>
